<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_energy_list_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_amikcal"
    android:gravity="fill_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/energy_list_view_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/energy_list_view_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_5dp" />

    <TextView
        android:id="@+id/energy_list_view_tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text=".."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtre :" />

        <EditText
            android:id="@+id/energy_list_view_tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:lines="@integer/one_line"
            android:maxLines="@integer/one_line"
            android:singleLine="false" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <include
        android:id="@+id/energy_list_view_customizedlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        layout="@layout/customizedlist" />

    
    </LinearLayout>
